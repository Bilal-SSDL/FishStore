/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/
.order-enter
  background black
  transform: translateX(-120%) rotate(0deg)
  transition .5s
  max-height 0
  padding 0
  &.order-enter-active
    background red
    max-height 60px
    transform: translateX(0) rotate(1440deg)
    padding 2rem 0 !important

.order-exit
  background thistle
  transition .5s
  transform: translateX(0)
  &.order-exit-active
    background blue
    transform: translateX(120%)
    padding: 0
.count-enter
  background yellow
  transition .5s
  transform translateX(100%)
  &.count-enter-active
    backkground: red
    transform translateX(0)
.count-exit
  background: black
  transform translateY(0)
  transition .5s
  position absolute
  left 0
  bottom 0
  &.count-exit-active
    background green
    transform translateY(-100%) scale(3)
